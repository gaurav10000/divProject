<% layout('layouts/boilerplate') -%>;

<div class="login-container">
    <form action="/login" method="post" class="login-form">
        <h2>Login</h2>
        <div class="input-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="Enter your username" required="true" value="">
        </div>
        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required="true" value="">
        </div>
        <button type="submit" class="btn">Login</button>

        <p> Not registered yet? <a href="/register">Sign-up</a></p>
    </form>
</div>

