<% layout('layouts/boilerplate') -%>;

    <div id="main">
        <div id="page1">
            <img id="img1"
                src="https://images.unsplash.com/photo-1564507592333-c60657eea523?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                alt="">
            <h1>Explore India</h1>
        </div>

        <div id="page2">
            <div id="places">
                <h1>Most Visited Places:</h1>
            </div>
            <div id="actualplaces">
                <% for (var i=0; i< states.length ;i++){ %>
                    <div id="card">
                        <img src="<%= states[i].img %>">
                        <div id="placename">
                            <h4 id="pname">
                                <%= states[i].name%>
                            </h4>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
        <div id="page3">
            <div id="features">
                <h1>Features:</h1>
                <div id="cent">
                    <div id="lefty">
                        <div id="list">
                            <i class="ri-supabase-line"></i>
                            <p>Provide easy and user Friendly </p> 
                        </div>
                        <div id="list">
                            <!-- <i class="ri-walk-fill"></i> -->
                            <i class="ri-24-hours-line"></i>
                            <p>Provide Daily based plan for your journey</p> 
                        </div>
                        <div id="list">
                            <i class="ri-walk-fill"></i>
                            <p>Provide Most visited places</p> 
                        </div>
                    </div>
                    <div id="righty">
                        <div id="list">
                            <i class="ri-time-fill"></i>
                            <p>Provide time based plan for ur journey</p> 
                        </div>
                        <div id="list">
                            <i class="ri-contract-left-right-line"></i>
                            <p>Provide easy input based location</p> 
                        </div>
                        <div id="list">
                            <i class="ri-compass-discover-line"></i>
                            <p>Provide easy Navigation</p> 
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>


    </div>